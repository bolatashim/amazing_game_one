
<% include _header %>


<div class="col-md-10">
<canvas id="amazingCanvas" width="900" height="680" style="background: #eee; display: block; padding: 0; margin: 0"></canvas>

</div>

<div class="col-md-2">
	<%# This is sorting function to sort the users based on their scores %>
	<%var scores = scoreboard.sort(function(a,b) {%>
		<%if (a.bestScore < b.bestScore) {%>
			<%return 1%>
		<%}%>
		<%if (a.bestScore > b.bestScore) {%>
			<%return -1%>
		<%}%>
		<%return 0%>
	<%})%>

	<h1>Scoreboard</h1>
	<ul>
	<% for (var i = 0; i < scores.length; i++) {%>
		<li> <%= scores[i].username %> ----- <%= scores[i].bestScore %></li>
	<%}%>
	</ul>

	<p>
		SPACE == hit enemy in motion direction
	</p>
	<p>
		Up, Down, Left, Right keys == to move around
	</p>
</div>

